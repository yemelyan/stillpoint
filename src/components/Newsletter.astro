---
import site from "../content/site.json";
const { newsletter } = site.home;
---

<section id="newsletter" class="section">
	<div class="container">
		<div class="section-card">
			<h2>{newsletter.heading}</h2>
			<p>{newsletter.text}</p>
			<p class="form-note">{newsletter.privacy}</p>
			<div class="newsletter-embed" aria-live="polite">
				<iframe
					title="Newsletter signup"
					width="540"
					height="500"
					src={newsletter.iframeSrc}
					frameborder="0"
					scrolling="no"
					allowfullscreen
				></iframe>
			</div>
			<p class="form-note">{newsletter.consent}</p>
			<p class="form-note">
				<a class="newsletter-link" href="#newsletter">{newsletter.updatesLine}</a>
			</p>
		</div>
	</div>
</section>
