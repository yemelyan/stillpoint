---
import Layout from "../layouts/Layout.astro";
import site from "../content/site.json";

const { contact } = site;
---

<Layout
	title={contact.pageTitle}
	description={contact.subheadline}
>
	<section class="section">
		<div class="container">
			<div class="section-card">
				<span class="tag">{contact.pageTitle}</span>
				<h1>{contact.headline}</h1>
				<p>{contact.subheadline}</p>
				<form class="contact-form" aria-label="Contact form">
					<label>
						<span>{contact.form.nameLabel}</span>
						<input type="text" name="name" autocomplete="name" placeholder="Your name" />
					</label>
					<label>
						<span>{contact.form.emailLabel}</span>
						<input type="email" name="email" autocomplete="email" placeholder="you@email.com" />
					</label>
					<label>
						<span>{contact.form.messageLabel}</span>
						<textarea name="message" rows="5" placeholder="Tell us about your practice."></textarea>
					</label>
					<button class="button" type="submit">{contact.form.submitLabel}</button>
					<p class="form-note">
						{contact.preferEmail}
					</p>
				</form>
			</div>
		</div>
	</section>
</Layout>
